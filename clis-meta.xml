<clis>
    <cli name="Pipeline" file="pipeline">
        <arguments>
            <argument format="--{value}" name="Command" type="select" required="true">
                <options>
                    <option>ping</option>
                    <option>package</option>
                    <option>deploy</option>
                    <option>execute</option>
                    <option>repository</option>
                    <option>copy</option>
                </options>
            </argument>
            <argument name="Machine" type="text" required="true">
                <format>
                    <argument>--machine</argument>
                    <argument>{value}</argument>
                </format>
                <focus-when>
                    <argument name="Command" is="anyOf">
                        <value>ping</value>
                    </argument>
                </focus-when>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>ping</value>
                        <value>deploy</value>
                        <value>execute</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Subsystem" type="text" required="true">
                <format>
                    <argument>--subsystem</argument>
                    <argument>{value}</argument>
                </format>
                <focus-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </focus-when>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Feature" type="text" required="true">
                <format>
                    <argument>--feature</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Version" type="text" required="true">
                <format>
                    <argument>--version</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Release" type="text" required="true">
                <format>
                    <argument>--release</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Package Name" type="text" required="true">
                <format>
                    <argument>--package</argument>
                    <argument>{value}</argument>
                </format>
                <focus-when>
                    <argument name="Command" is="anyOf">
                        <value>deploy</value>
                        <value>execute</value>
                        <value>repository</value>
                    </argument>
                </focus-when>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>deploy</value>
                        <value>execute</value>
                        <value>copy</value>
                        <value>repository</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Script Name" type="text" required="true">
                <format>
                    <argument>--script</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>execute</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Parameters" type="text">
                <format>
                    <argument>--parameters</argument>
                    <argument>"{value}"</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>execute</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Source Directory" type="directory" required="true">
                <format>
                    <argument>--source</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Job Name" type="text" required="true">
                <format>
                    <argument>--job</argument>
                    <argument>{value}</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>copy</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="From" type="networklocation" required="true">
                <format>
                    <argument>--from</argument>
                    <argument>&quot;{value}&quot;</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>copy</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="To" type="networklocation" required="true">
                <format>
                    <argument>--to</argument>
                    <argument>&quot;{value}&quot;</argument>
                </format>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>copy</value>
                    </argument>
                </show-when>
            </argument>
            <argument format="--overwrite" name="Overwrite" type="checkbox">
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>copy</value>
                    </argument>
                </show-when>
            </argument>
            <argument format="--purge true" name="Purge" type="checkbox">
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>package</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Environment" type="select">
                <format>
                    <argument>--environment</argument>
                    <argument>{value}</argument>
                </format>
                <options>
                    <option>dev</option>
                    <option>int</option>
                    <option>qa</option>
                    <option>prod</option>
                </options>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>deploy</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Action" type="select">
                <format>
                    <argument>--action</argument>
                    <argument>{value}</argument>
                </format>
                <options>
                    <option>download</option>
                </options>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>repository</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Repository" type="select">
                <format>
                    <argument>--repoType</argument>
                    <argument>{value}</argument>
                </format>
                <options>
                    <option>untrusted</option>
                    <option>trusted</option>
                </options>
                <show-when>
                    <argument name="Command" is="anyOf">
                        <value>repository</value>
                    </argument>
                </show-when>
            </argument>
            <argument name="Timeout" type="text" default="00:30:00">
                <format>
                    <argument>--timeout</argument>
                    <argument>{value}</argument>
                </format>
            </argument>
            <argument format="--debug" name="Debug" type="checkbox">
            </argument>
            <argument format="--noupdate" name="Skip Update" type="checkbox">
            </argument>
        </arguments>
        <templates>
            <template desc="Ping agent">
                <argument name="Command" value="ping" />                
            </template>
            <template desc="Upload package">
                <argument name="Command" value="package" />
            </template>
            <template desc="Deploy package to orchestration server">
                <argument name="Command" value="deploy" />
                <argument name="Machine" value="CCPRDAPP077" />
                <argument name="Environment" value="dev" />
            </template>
            <template desc="Download package">
                <argument name="Command" value="repository" />
                <argument name="Action" value="download" />
                <argument name="Repository" value="untrusted" />
            </template>
            <template desc="Execute script">
                <argument name="Command" value="execute" />
                <argument name="Environment" value="dev" />
            </template>
            <template desc="Sync PL2 -> PL3 (Trusted)">
                <argument name="Command" value="copy" />
                <argument name="Job" value="reposync111" />
                <argument name="From" value="&quot;\\ccprdwf012\D$\Data\pipeline\Repositories\Trusted\{subsystem}\{package}*&quot;" />
                <argument name="To" value="&quot;\\plwinprd03\D$\Data\pipeline\Repositories\Trusted\{subsystem}&quot;" />
                <argument name="Timeout" value="00:30:00" />
                <argument name="Overwrite" value="true" />
            </template>
            <template desc="Sync PL3 -> PL2 (Untrusted)">
                <argument name="Command" value="copy" />
                <argument name="Job" value="reposync222" />
                <argument name="From" value="&quot;\\plwinprd01\D$\Data\pipeline\Repositories\UnTrusted\{subsystem}\{package}*&quot;" />
                <argument name="To" value="&quot;\\ccprdwf013\D$\Data\pipeline\Repositories\UnTrusted\{subsystem}&quot;" />
                <argument name="Timeout" value="00:30:00" />
                <argument name="Overwrite" value="true" />
            </template>
            <template desc="Delete trusted file">
                <argument name="Command" value="execute" />
                <argument name="Package" value="pipeline_demo_4.2.0_20190527" />
                <argument name="Machine" value="plwinprd03" />
                <argument name="Script" value="folderhelper.ps1" />
                <argument name="Parameters" value="&quot;Delete|D:\Data\pipeline\Repositories\Trusted\{subsystem}\{package}*" />
                <argument name="Timeout" value="00:30:00" />
                <argument name="Environment" value="prod" />
            </template>
        </templates>
    </cli>
</clis>